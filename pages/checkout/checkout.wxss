.checkout-page {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.picker {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.down {
  margin-left: 10rpx;
  width: 32rpx;
  height: 32rpx;
}

.photos {
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 10rpx solid #f5f5f5;
  padding-bottom: 30rpx;
}

.photos .photos_title {
  font-size: 32rpx;
  color: #333333;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.photos .items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.items .item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  background: #E4E4E4;
  margin-right: 40rpx;
  font-size: 60rpx;
  color: #676767;
}
.mt {
    margin-top: 30rpx;
}
.photo {
  width: 130rpx;
  height: 130rpx;
}
.photos .items .item .del {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 30rpx;
  height: 30rpx;
}
.add {
  border-radius: 5rpx;
}
.btn {
  color: #fff;
  font-size: 40rpx;
  height: 100rpx;
  margin-top: 140rpx;
  background: #017EF2;
}

.addC {
  display: flex;
  flex-direction: column;
  align-items: center;

}

.notice {
  font-size: 24rpx;
  margin-right:30rpx;
  color: #A8A8A8;
  margin-top: 20rpx;
}

.tips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #A8A8A8;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.tips__headers {
  font-size: 28rpx;
}

page {
  height: 100%;
}

.con {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity: 0.5;
  background: #ccc;
  z-index: 1;
}

.dialog {
  position:fixed;
  margin:0px auto;
  top: 50%;
  width: 530rpx;
  height: 240rpx;
  border-top: #017EF2 10rpx solid;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
  z-index: 2;
}

.dialog__content {
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.dialog__btn {
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}