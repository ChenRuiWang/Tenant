.history-page {
  display: flex;
  flex-direction: column;
}
.items {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}

.item {
  margin: 0 40rpx;
  border-bottom: 10rpx solid #e5e5e5;
}

.item__header {
  height: 80rpx;
  line-height: 80rpx;
  /* width: 100%; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item__header .title {
  font-size: 28rpx;
}
.item__content .detail {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: content;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #7B7B7B;
}
.status {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.status .text {
  font-size: 28rpx;
  color: #CC1A26;
  margin-right: 20rpx;
}
.icon {
  width: 32rpx;
  height: 32rpx;
}
.show {
  color: #2676B8;
}
.mb {
  margin-bottom: 20rpx;
}

.none {
  display: none;
}
.block {
  display: block;
  -webkit-animation-name: fadeOut;
  -webkit-animation-duration: 1s; /*淡入动画秒数 */
  -webkit-animation-iteration-count: 1;
  -webkit-animation-delay: 0s;
}

/* 动画效果 淡入*/
@-webkit-keyframes fadeIn {
	0% {
	opacity: 0;
	}
	20%{
		opacity: .2;
	}
	50% {
		opacity: .5;
	}
	70%{
		opacity: .7;
	}
	100% {
		opacity: 1; 
	}
}