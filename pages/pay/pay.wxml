<!--pages/pay/pay.wxml-->
<view class='pay-page'>
  <navigation
    title="支付订单"
    height="{{height}}"
  ></navigation>
  <view class='content'>
    <text class='real'>实付金额</text>
    <view class='pay-money'>
      <text class='money'>¥ 2000</text>
      <text class='remark'>房租单/水电费账单</text>
    </view>
    <view class='pay-type'>
      <view class='img-text'>
        <view>
          <image src='/images/icon/wechat-pay.png' class='img'></image>
        </view>
        <view>
          <text class='text'>微信支付</text>
        </view>
      </view>
      <view style='margin-right: 30rpx;'>
         <checkbox checked='true' disabled></checkbox>
      </view>
    </view>
    <view class='btn'>
      <button >确认支付</button>
    </view>
  </view>
</view>
